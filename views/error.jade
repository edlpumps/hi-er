extends layout



block content
    .container
        .panel.panel-danger
            .panel-heading
                if messages.errorTitle
                    h1 #{messages.errorTitle}
                else
                    h1 An error has occured
            .panel-body
                
                if messages.errorMessage
                    .text-danger #{messages.errorMessage}
                else 
                    .text-danger There was no additional detail associated with this error.