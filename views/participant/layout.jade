doctype html
html
  head
    
    include ../global_includes
    
    script(src="/scripts/erParticipantApp.js")
    
    block styles
      
    title HI Energy Ratings Program
    block script
    
  body

     mixin navigation(active)
       .navbar.navbar-default
        .container-fluid
           .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navcollapse",aria-expanded="false")
                .sr-only Toggle navigation
                .icon-bar 
                .icon-bar 
                .icon-bar 
              a.navbar-brand(href="/") 
                img(style="max-width:27px; margin-top: -7px;", src="/images/logo-big.png")
                
              
           .collapse.navbar-collapse#navcollapse
               .navbar-text HI Energy Ratings Portal
               
               ul.nav.navbar-nav
                  li(class=(active == 'home' ? 'active' : ''))
                    a(href="/participant") 
                      .glyphicon.glyphicon-home.margin-right
                      | Home
                  li(class=(active == 'users' ? 'active' : ''))
                    a(href="/participant/users") 
                      .glyphicon.glyphicon-user.margin-right
                      | User Management
                  li(class=(active == 'pumps' ? 'active' : ''))
                    
                    a(href="/participant/pumps") 
                      .glyphicon.glyphicon-th-list.margin-right
                      | Pump Listings
                  
                ul.nav.navbar-nav.navbar-right
                  li.dropdown
                    a(href="#", data-toggle="dropdown", role="button") 
                      | Public ER Listings
                      span.caret
                    ul.dropdown-menu
                      li: a(href="/pei") 
                        .glyphicon.glyphicon-scale.margin-right
                        | ER Calculator
                      li: a(href="/ratings/search") 
                        .glyphicon.glyphicon-search.margin-right
                        | Pump Search
                      li: a(href="/ratings/utilities") 
                        .glyphicon.glyphicon-stats.margin-right
                        | Utility Search
                  li
                    .navbar-text #{user.name.first} #{user.name.last}
                  li
                    a(href="/logout") Sign out

       
     //- heading stuff
     block nav
     block content