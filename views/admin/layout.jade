doctype html
html.ng-cloak(ng-app='ERAdminApp')
  head
    
    include ../global_includes
    
    script(src="/scripts/erAdminApp.js")
    
    block styles
      
    title HI Energy Ratings Program
    block script
    
  body

     mixin navigation(active)
       .navbar.navbar-custom
        .container-fluid
           .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navcollapse",aria-expanded="false")
                .sr-only Toggle navigation
                .icon-bar 
                .icon-bar 
                .icon-bar 
              a.navbar-brand(href="/") 
                img(style="max-width:27px; margin-top: -7px;", src="/images/white-brand.png")
               
              
           .collapse.navbar-collapse#navcollapse
               .navbar-text.hidden-sm HI Energy Ratings Program
               ul.nav.navbar-nav
                  li(class=(active == 'home' ? 'active' : ''))
                    a(href="/") 
                     .glyphicon.glyphicon-cog.margin-right
                     | Admins
                  li(class=(active == 'participants' ? 'active' : ''))
                    a(href="/admin/participants") 
                     .glyphicon.glyphicon-user.margin-right
                     | Participants
                  li(class=(active == 'labs' ? 'active' : ''))
                    a(href="/admin/labs") 
                     .glyphicon.glyphicon-scale.margin-right
                     | Laboratories
                  li(class=(active == 'labels' ? 'active' : ''))
                    a(href="/admin/labels") 
                     .glyphicon.glyphicon-wrench.margin-right
                     | Settings
                ul.nav.navbar-nav.navbar-right
                  li: a(href="/ratings/home") 
                        .glyphicon.glyphicon-eye-open.margin-right
                        | Public site
                  +unit_switch()
                  li(title="#{user.name.first} #{user.name.last} - Sign out")
                    a(href="/logout") 
                     .glyphicon.glyphicon-log-out
                  li
                    a(href="/ratings/glossary", title="Help documentation", target="_blank") 
                     .glyphicon.glyphicon-question-sign
            
     //- heading stuff
     block nav
     block content