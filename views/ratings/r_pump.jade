extends layout

block nav
     +navigation("pump")

block content
    .container
      
      .panel.panel-default.rating_panel
        .panel-heading 
          .heading
           
           img(src="/images/hydraulic-institute-logo.png", width="500").hidden-xs
           img(src="/images/hydraulic-institute-logo.png", style="width:80%").hidden-md.hidden-lg.hidden-sm
             
           h2 #{pump.basic_model}
           h4 #{pump.participant}
            
        .panel-body
          .row
           .col.col-sm-5.text-center
             img(src="/images/doe/#{pump_drawing}").hidden-xs
             img(src="/images/doe/#{pump_drawing}", style="width:95%").hidden-md.hidden-lg.hidden-sm
           .col.col-sm-7
                .row 
                    .form-group
                        .col.col-xs-5
                            label Vendor / Rater:
                        .col.col-xs-7
                            .form-control-static #{pump.participant}
                .row 
                    .form-group
                        .col.col-xs-5
                            label HI Rating ID:
                        .col.col-xs-7
                            .form-control-static #{pump.rating_id}
                .row 
                    .form-group
                        .col.col-xs-5
                            label Basic model designation:
                        .col.col-xs-7
                            .form-control-static #{pump.basic_model}
                .row 
                    .form-group
                        .col.col-xs-5
                            label DOE product category:
                        .col.col-xs-7
                            .form-control-static #{pump.doe}
                .row 
                    .form-group
                        .col.col-xs-5
                            label HI approved laboratory:
                        .col.col-xs-7
                            .form-control-static #{pump.laboratory}
                .row 
                    .form-group
                        .col.col-xs-5
                            label Full impeller diameter (in):
                        .col.col-xs-7
                            .form-control-static #{pump.diameter}
                .row 
                    .form-group
                        .col.col-xs-5
                            label Nominal speed (rpm):
                        .col.col-xs-7
                            .form-control-static #{pump.speed}
                .row 
                    .form-group
                        .col.col-xs-5
                            label BEP flow rate (gpm):
                        .col.col-xs-7
                            .form-control-static #{pump.flow.bep100}
                .row 
                    .form-group
                        .col.col-xs-5
                            label BEP head (feet):
                        .col.col-xs-7
                            .form-control-static #{pump.head.bep100}

                .row 
                    .form-group
                        .col.col-xs-5
                            label Rated motor power (hp):
                        .col.col-xs-7
                            .form-control-static #{pump.motor_power_rated}

                
      
      .panel.panel-default
        .panel-heading 
            h1 Energy Ratings
        .panel-body
           
           .row
            .col.col-sm-6.text-center
              h4 Pump Energy Index
              p.pei_display #{pump.pei.toFixed(2)}
              p.pei_baseline Baseline:  #{pump.pei_baseline.toFixed(2)}
            .col.col-sm-6.text-center
              h4 Energy Rating
              p.er_display #{pump.energy_rating}
           .row.solo.hidden-xs
            .col.col-lg-12.text-center
              object(id="label_svg", data="/labels/#{participant._id}/#{pump._id}/svg", type="image/svg+xml")
           .row.solo.hidden-sm.hidden-md.hidden-lg
            .col.col-lg-12.text-center
              object(id="label_svg", style="width:90%", data="/labels/#{participant._id}/#{pump._id}/svg", type="image/svg+xml")
           
           .row.solo
            .col.col-xs-12
             .alert.alert-info These calculations are samples only - actual results will appear when the PEI calculator is fully implemented and available
          
   