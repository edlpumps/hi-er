doctype html
html
  head
    
    include ../global_includes
    
    
    block styles
      
    title HI Energy Ratings Program
    
    
  body.ratings
     mixin navigation_calculator()
       .navbar.navbar-inverse
        .container-fluid
           .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navcollapse",aria-expanded="false")
                .sr-only Toggle navigation
                .icon-bar 
                .icon-bar 
                .icon-bar 
              a.navbar-brand(href="http://pumps.org") 
                img(style="max-width:27px; margin-top: -7px;", src="/images/white-brand.png")
               
              
           .collapse.navbar-collapse#navcollapse
                ul.nav.navbar-nav.navbar-right
                  +language_switch(active)
                  +unit_switch()

     mixin navigation(active)
       .navbar.navbar-inverse
        .container-fluid
           .navbar-header
              button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navcollapse",aria-expanded="false")
                .sr-only Toggle navigation
                .icon-bar 
                .icon-bar 
                .icon-bar 
              a.navbar-brand(href="http://pumps.org") 
                img(style="max-width:27px; margin-top: -7px;", src="/images/white-brand.png")
               
              
           .collapse.navbar-collapse#navcollapse
               ul.nav.navbar-nav
                  li(class=(active == 'home' ? 'active' : ''))
                    a(href="/ratings/home") 
                     .glyphicon.glyphicon-home.margin-right
                     | HI Energy Ratings Home
                  li(class=(active == 'portal' ? 'active' : ''))
                    a(href="/portal") 
                     .glyphicon.glyphicon-log-in.margin-right
                     | Energy Rating Portal
                  li(class=(active == 'search' ? 'active' : ''))
                    a(href="/ratings/search")
                     .glyphicon.glyphicon-search.margin-right
                     | Search Pumps
                  li(class=(active == 'utility' ? 'active' : ''))
                    a(href="/ratings/utilities")
                     .glyphicon.glyphicon-stats.margin-right
                     | Qualified Product List
                  if process.env.CERTIFICATES_ENABLED 
                    li(class=(active == 'certificates' ? 'active' : ''))
                      a(href="/ratings/certificates")
                        .glyphicon.glyphicon-unchecked.margin-right
                        | ER Certificates
                ul.nav.navbar-nav.navbar-right
                  +language_switch(active)
                  +unit_switch()
                  li
                    a(href="/ratings/glossary", title="Help documentation", target="_blank") 
                     .glyphicon.glyphicon-question-sign
               
     block nav
     block content
     block script
     
     script(src="/scripts/rzslider.min.js")
     script(src="/scripts/erRatingsApp.js")
    
